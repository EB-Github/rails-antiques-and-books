<div class="container">
</div>
<div class="container">
    <div class="row">
        <!--Create Items -->
        <div class="col-md-9">
            
            <% @products.each_with_index do |p,i| %>
            <div class="panel panel-default">
                <div class="panel-body">
                <div>
                    <img src='<%= p.imagesrc %>' style='max-width: 200px; max-height: 200px;'/>
                    <h2><%= p.name %></h2>
                    <p><%= p.description %></p>
                    <div class='row'>
                        <div class='col-xs-1'>
                            <%= button_to "View", product_path(p), {method: 'get', class: "btn btn-primary"} %>
                        </div>
                        <div class='col-xs-1'>
                            <%= button_to "Edit", edit_product_path(p), :class => "btn btn-primary" %>
                        </div>
                        <div class='col-xs-1'>
                            <%= button_to "Delete", product_path(p), method: :delete,
                                  data: { confirm: "Are you sure you want to delete this product?" }, :class => "btn btn-primary" %>
                        </div>
                    </div>
                    </div>
                    </div>
                </div>
            <% end %>
        </div>
        <!--Sidebar-->
         <div class="col-xs-6 col-sm-3 sidebar-offcanvas">
            <div class='panel panel-default'>
                <div class="panel-body">
                    <a href='/products/new'>Add a new Product</a>
                </div>
            </div>
         </div>
    </div>
</div>