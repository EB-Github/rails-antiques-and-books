<div class='container'>
    <h1>Login</h1>
    <div class='col-xs-4' >
   <div class="panel panel-default">
    <div class="panel-body">
    <%=form_for :product, :html => {:class => "form-horizontal center"} do |p| %>
        <div class="form-group">
        
            <%= p.label :username, "Username:", class: "col-md-4 control-label"  %>
            <div class="col-md-8">
                <%= p.text_field :username, class: "form-control" %>
            </div>
        </div>
         <div class="form-group">
            <%= p.label :password, "Password:", class: "col-md-4 control-label"  %>
            <div class="col-md-8">
                <%= p.text_field :password, type: "password", class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group pull-right">
        
            
            <div class="col-xs-4">
             <%= p.submit 'Submit', :class => "btn btn-primary form-horizontal center" %>

            </div>
            <br/>
             
        </div>
    <% end %>
    <p>Not a User? <a href='/users/new'>Create an account</a></p>
  </div>
</div>

</div>
</div>
